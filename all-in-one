var books = _.filter(products, function(item){
  return item.category === "books";
});

//console.log(books);

var cheapBooks = _.filter(products, function(item){
  var isBook = item.category === "books";
  var isCheap = item.price < 20;
  var isCheapBook = (isBook && isCheap)
  return isCheapBook;
})

//console.log(cheapBooks);

var cheapSellingPoints = _.map(cheapBooks, function(book) {
  return book.selling_points;
})

var flatSelling = _.reduce(cheapSellingPoints, function (acc, el){
  return acc.concat(el);
}, []);
    
//console.log(flatSelling);
    
    
