<!DOCTYPE html>
<html>
<head>
  <title>Game</title>
</head>
<body>
  <h1>Hangman Game</h1>
  <script>
  //Create an array of words
  var words = [
  "javascript",
  "monkey",
  "amazing",
  "pancake"
  ]; 

  //Pick a random word
  var word = words[Math.floor(Math.random()*words.length)];

  //Set up the answer array
  var answerArray = [];
  for (var i=0; i < word.length;i++) {
    answerArray[i] = "_";
  }

  var remainingLetters = word.lenght;

  //The game loop
  while (remainingLetters > 0) {
    //Show the player's progress
    alert(answerArray.join(" "));
    //Get a guess from the player
    var guess = prompt("Guess a letter, or click cancel to exit the game.");
    if (guess === null) {
      //Exit the game loop
       break;
    } else if (guess.length !== 1) {
      alert("Please enter a single letter.");
    } else {
      //Update the game with a guess
      for (var j = 0); j < word.length; j++) {
      if (word[j] === guess) {
        answerArray[j] = guess;
        remainingLetters--;
      }
      }
    }
    //The end of the loop
    }

    //Show the answer and congratulate the player
    alert(answerArray.join(" "));
    alert("Good job! The answer was" + word);
    </script>
  </body>
</html>


